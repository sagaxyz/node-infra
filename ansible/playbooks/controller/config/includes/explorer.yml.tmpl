  STATS__BLOCKSCOUT_DB_URL: "postgresql://{{ .ExplorerDbUser }}:{{ .ExplorerDbPwd }}@blockscout-db-ro.blockscout.svc.cluster.local:5432/blockscout-{{ .ChainId }}"
